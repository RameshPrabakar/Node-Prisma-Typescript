{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "types": ["jest"],
        "typeRoots": ["node_modules/@types"],
    },
    "include": ["src", "tests/**/*.test.ts"],
    "exclude": ["node_modules","tests","**/*.test.ts", "**/*.spec.ts"]
}